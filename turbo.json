{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist"]
    },
    "test": {
      "dependsOn": ["@repo/vitest-config#build", "^test"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "lint:check": {
      "dependsOn": ["^lint:check"]
    },
    "lint:fix": {},
    "format:check": {
      "dependsOn": ["^format:check"]
    },
    "format:fix": {},
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
